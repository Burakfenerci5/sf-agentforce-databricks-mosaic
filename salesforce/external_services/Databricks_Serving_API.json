{
  "openapi": "3.0.1",
  "info": {
    "title": "Databricks Model Serving API",
    "description": "API to invoke Databricks Mosaic AI Agents from Salesforce",
    "version": "1.0.0"
  },
  "paths": {
    "/serving-endpoints/iot-agent/invocations": {
      "post": {
        "summary": "Invoke Agent",
        "operationId": "invokeAgent",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "inputs": {
                    "type": "object",
                    "properties": {
                      "prompt": {
                        "type": "array",
                        "items": { "type": "string" }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "predictions": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "answer": { "type": "string" }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}